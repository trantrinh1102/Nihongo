<div class="content">
  <%= render "layouts/flash", flash: flash %>
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card card-plain">
          <div class="card-header" data-background-color="blue">
            <h4 class="title"><%= t ".list_category" %></h4>
          </div>
          <div class="row">
            <div class="col-md-4">
              <%= link_to t(".btn_add_category"), new_admin_category_path,
                class: "btn btn-info", remote: true %>
            </div>
            <div class="pull-right">
              <%= render "search_form" %>
            </div>
          </div>
          <div class="card-content table-responsive">
            <table class="table table-hover">
              <thead class="text-info">
                <th><%= t ".id" %></th>
                <th><%= t ".name" %></th>
                <th><%= t ".description" %></th>
                <th><%= t ".created_at" %> At</th>
                <th><%= t ".action" %></th>
              </thead>
              <tbody>
                <% @categories.each_with_index do |category, index| %>
                  <tr id="category-<%= category.id %>">
                    <td><%= index + 1 %></td>
                    <td><%= category.name %></td>
                    <td><%= category.description %></td>
                    <td><%= category.created_at.strftime("%m/%d/%Y") %></td>
                    <td class="text-center">
                      <%= link_to edit_admin_category_path(category), remote: true do %>
                        <i class="material-icons btn-info">edit</i>
                      <% end %>
                      <a class="btn-delete-category btn-danger" data-value="<%= category.id %>">
                        <i class="material-icons">delete</i></a>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <%= paginate @categories %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
