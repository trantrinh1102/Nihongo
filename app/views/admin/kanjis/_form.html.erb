<%= form_for [:admin, @kanji] do |f| %>
  <div class="card-content">
    <div id="typography">
      <div class="form-group">
        <%= f.text_field :character, class: "form-control",  placeholder: t(".title"), required: true %>
        <%= f.text_field :vietnamese, class: "form-control",  placeholder: t(".title"), required: true %>
        <%= f.text_field :romaji, class: "form-control",  placeholder: t(".title"), required: true %>
        <%= f.text_field :hira_kata, class: "form-control",  placeholder: t(".title"), required: true %>
      </div>
      <div class="form-group">
        <label><%= t ".lesson" %></label>
        <span class="material-input"></span>
      </div>
    </div>
    <div>
      <%= f.label :example %><br>
      <%= f.text_area :example, class: "ckeditor" %>
    </div>
    <button class="btn btn-success pull-right"><%= t ".btn_submit" %></button>
  </div>
<% end %>
