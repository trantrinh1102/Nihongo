<div class="modal fade addLessonTestAdmin" id="addTestLesson" tabindex="-1" role="dialog"
  aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modalAddlesson modal-lg ">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close"  data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
          <span class="sr-only">Close</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">
          <%= t ".title" %>
        </h4>
      </div>
      <%= form_for [:admin, test], multipart: true do |f| %>
        <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>"/>
        <div class="modal-body">
          <% if params[:lesson_id].present? %>
            <%= f.hidden_field :lesson_id, value: lesson_id %>
          <% else %>
            <div class="row">
              <div class="col-md-3">
                <label><%= t ".lesson" %></label>
              </div>
              <div class="col-md-8">
                <%= f.collection_select :lesson_id, lessons, :id, :name, {prompt: false},
                  {class: "form-control"} %>
              </div>
            </div>
          <% end %>
          <div class="form-group">
            <div class="row">
              <div class="col-md-3">
                <label><%= t ".name" %></label>
              </div>
              <div class="col-md-8">
                <%= f.text_field :name, class: "form-control",  placeholder: t(".placeholder_name"), required: true %>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row">
              <div class="col-md-3">
                <label><%= t ".description" %></label>
              </div>
              <div class="col-md-8">
                <%= f.text_field :description, class: "form-control",  placeholder: t(".placeholder_description"), required: true %>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">
            <%= t ".btn_close" %></button>
          <button type="submit" class="btn btn-info"><%= t ".btn_add_test" %></button>
        </div>
      <% end %>
    </div>
  </div>
</div>

