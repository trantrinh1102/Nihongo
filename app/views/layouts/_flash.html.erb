<div id="flash-messages">
  <% if flash[:error]&.any? %>
    <% flash[:error].each do |message| %>
      <div class="alert alert-danger" id="flash-messages-error">
        <button type="button" aria-hidden="true" class="close" id="closeFlash">×</button>
        <span><b> Errors: </b><%= message %></span>
      </div>
    <% end %>
  <% end %>
  <% if flash[:success]&.any? %>
    <% flash[:success].each do |message| %>
      <div class="alert alert-success" id="flash-messages-success">
        <button type="button" aria-hidden="true" class="close" id="closeFlash">×</button>
        <span><b> Success: </b><%= message %></span>
      </div>
    <% end %>
  <% end %>
</div>
