<div class="content">
  <%= render "layouts/flash", flash: flash %>
  <div class="container-fluid">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header" data-background-color="blue">
          <h4 class="title"><%= t ".title" %></h4>
          <p class="category"></p>
        </div>
        <%= form_for [:admin, @grammar] do |f| %>
          <div class="card-content">
            <div id="typography">
              <div class="form-group">
                <label>title</label>
                <%= f.text_field :title, class: "form-control",  placeholder: t(".title"), required: true %>
                <span class="material-input"></span>
              </div>
            </div>
            <div>
              <%= f.hidden_field :lesson_id, value: params[:lesson_id] %>
              <%= f.label :content %><br>
              <%= f.text_area :content, class: "ckeditor" %>
            </div>
            <button class="btn btn-success pull-right"><%= t ".btn_submit" %></button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
