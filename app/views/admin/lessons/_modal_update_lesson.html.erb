<div class="modal fade" id="updateLesson" tabindex="-1" role="dialog"
  aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close"  data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
          <span class="sr-only">Close</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">
          <%= t ".title" %>
        </h4>
      </div>
      <%= form_for [:admin, lesson], remote: true do |f| %>
        <div class="modal-body">
          <div class="form-group">
            <label><%= t ".category" %></label>
            <div class="dropdown">
              <%= f.collection_select :category_id, categories, :id, :name, prompt: false,
                class: "btn btn-info dropdown-toggle caret" %>
            </div>
          </div>
          <div class="form-group">
            <label><%= t ".name" %></label>
            <%= f.text_field :name, class: "form-control",  placeholder: t(".placeholder_name"), required: true %>
          </div>
          <div class="form-group">
            <label><%= t ".description" %></label>
            <%= f.text_field :description, class: "form-control",  placeholder: t(".placeholder_description"), required: true %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">
            <%= t ".btn_close" %></button>
          <button type="submit" class="btn btn-info"><%= t ".btn_update_lesson" %></button>
        </div>
      <% end %>
    </div>
  </div>
</div>

