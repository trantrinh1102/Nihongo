<%= form_for [:admin, kanji] do |f| %>
  <div class="card-content">
    <div class="card">
      <div class="row">
        <div class="col-md-5 col-md-offset-1">
          <div class="form-group">
            <label class="control-label"><%= t ".character" %></label>
            <%= f.text_field :character, id:"kanji_title",
              class: "form-control" %>
            <span class="material-input"></span>
          </div>
        </div>
        <div class="col-md-5">
          <div class="form-group">
            <label class="control-label"><%= t ".vietnamese" %></label>
            <%= f.text_field :vietnamese, id:"vietnamese",
              class: "form-control" %>
            <span class="material-input"></span>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-5 col-md-offset-1">
          <div class="form-group">
            <label class="control-label"><%= t ".kunyomi" %></label>
            <%= f.text_field :kunyomi, id:"kunyomi",
              class: "form-control" %>
            <span class="material-input"></span>
          </div>
        </div>
        <div class="col-md-5">
          <div class="form-group">
            <label class="control-label"><%= t ".onyomi" %></label>
            <%= f.text_field :onyomi, id:"onyomi",
              class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <div class="form-group">
            <label class="control-label"><%= t ".example" %></label>
            <%= f.text_field :example, id:"example",
              class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <button class="btn btn-success pull-right"><%= t ".btn_submit" %></button>
        </div>
      </div>
    </div>
  </div>
<% end %>
